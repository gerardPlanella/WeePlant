{% extends 'base.html.twig' %}

{% block body %}
    <section id="wrapper" class="login-register">
        <div class="login-box login-sidebar">
            <div class="white-box">
                <form class="form-horizontal form-material" method="post" action="{{ path('login') }}">

                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <img alt="Home" src="http://opendaylasalle.com/images/logo_challenge.png" style="height: 150px;">

                    <div class="form-group m-t-40">
                        <div class="col-xs-12">
                            <input class="form-control" id="inputEmail"  type="text" name="_username" placeholder="Nombre de usuario" required autofocus>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <input class="form-control" id="inputPassword" type="password" name="_password" placeholder="Contraseña" required autofocus>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="checkbox checkbox-primary pull-left p-t-0">
                                <input id="checkbox-signup" type="checkbox">
                                <label for="checkbox-signup"> Recordarme </label>
                            </div>
                            <a href="javascript:void(0)" id="to-recover" class="text-dark pull-right"><i class="fa fa-lock m-r-5"></i> No recuerdas la contraseña?</a> </div>
                    </div>
                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Iniciar sesión</button>
                        </div>
                    </div>
                </form>
                <form class="form-horizontal" id="recoverform">
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <h3>Recuperar contraseña</h3>
                            <p class="text-muted">Para recuperar tus credenciales, por favor contacta con tu supervisor mas cercano.</p>
                            <p class="text-muted">También puedes enviar un correo a <a href="mailto:soporte@urportal.net?Subject=Credenciales%20perdidas" target="_top">soporte@urportal.net</a>.</p>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
{% endblock %}
